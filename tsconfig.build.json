{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "skipLibCheck": false
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/story/**",
    "**/*.story.js",
    "**/*.story.jsx",
    "**/*.story.ts",
    "**/*.story.tsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}
